#include <stdio.h>
#include <string.h>
#include "ro_uname.h"

char *program_name;


int main(int argc, char *argv[])
{
  int p = 1;
  program_name = argv[0];
  if (argv[1] && argv[2]) {
    char trans[256];
    while (argv[p]) {
      const char *conv;
      conv = ro_tounix(argv[p], trans);
      printf("Input name: %s\n"
	     "Translated to: %s\n"
	     "  and back to: %s\n", argv[p], conv,
	     ro_fromunix(conv, trans));
      ++p;
    }
  } else {
    char buf[256], trans[256];
    if (argv[1])
      strcpy(trans, argv[1]);
    else {
      printf("Translation: ");
      fflush(stdout);
      gets(trans);
      if (feof(stdin)) return 1;
    }
    for (;;) {
      const char *conv;
      printf("Input name: ");
      fflush(stdout);
      gets(buf); /* dangerous */
      if (feof(stdin)) {
        puts("");
        break;
      }
      if (!*buf) break;
      conv = ro_tounix(buf, trans);
      printf("Translated to: %s\n"
	     "  and back to: %s\n", conv, ro_fromunix(conv, trans));
    }
  }
  return 0;
}
