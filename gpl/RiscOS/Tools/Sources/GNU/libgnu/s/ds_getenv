; char *ds_getenv(const char *var)
; -- return the contents of a system variable (as a string), or 0 if it
;    doesn't exist.
;    This is (more or less) equivalent to getenv() except that it copes with
;    strings of over 255 characters

	GET	s.~include

	IMPORT	xrealloc

	AREA	|Asm$$code|, CODE, READONLY

	EXPORT  ds_getenv
ds_getenv
	FNJSR	"r4-r7"
	MOV	r7,r0
	MVN	r2,#0
	MOV	r3,#0
	MOV	r4,#4
	SWI	&20023 ; XOS_ReadVarVal
	RSB	r6,r2,#0
	LDR	r5,=buffer
	LDR	r0,[r5]
	MOVS	r1,r6
	MOVEQ	r1,#1
	BL	xrealloc
	STR	r0,[r5]
	MOV	r1,r0
	MOV	r0,r7
	MOV	r2,r6
	MOV	r3,#0
	MOV	r4,#4
	SWI	&20023 ; XOS_ReadVarVal
	MOVVS	r0,#0
	FNRTS	VS
	TEQ	r6,#0
	SUBNE	r6,r6,#1
	LDR	r0,[r5]
	MOV	r1,#0
	STRB	r1,[r0,r6]
	FNRTS


	AREA	|Asm$$data|, NOINIT

buffer	&	0

	END
