	GET	s.~include
	GET	hdr.system

; int strcasecmp (const char *, const char *)
; int strncasecmp (const void *, const void *, int)

	AREA	|Asm$$Code|, CODE, READONLY

	EXPORT	strcasecmp
	EXPORT	strncasecmp

	HEAD	"strncasecmp"
strncasecmp
	FNJSRA	"v1"
	MOV	a4,a1
	MOVS	a1,a3 ; comparing nothing?
	FNRTSA	EQ
0	LDRB	a1,[a4],#1
	LDRB	v1,[a2],#1
	CMP	a1,#'A'
	RSBHSS	lr,a1,#'Z'
	ADDHS	a1,a1,#32
	CMP	v1,#'A'
	RSBHSS	lr,v1,#'Z'
	ADDHS	v1,v1,#32
	SUBS	a1,a1,v1
	FNRTSA	NE
	TEQ	v1,#0
	SUBNES	a3,a3,#1
	BNE	%BT0
	FNRTSA


strcasecmp
	MOV	a3,#-1
	B	strncasecmp


	END
