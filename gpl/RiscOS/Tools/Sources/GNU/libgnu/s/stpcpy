	GET	s.~include

; char *stpcpy(char *dest, const char *src)
; -- copy string, returning addr of terminating NUL in dest

	AREA	|Asm$$code|, CODE, READONLY

	EXPORT  stpcpy
stpcpy	LDRB	a3,[a2],#1
	STRB	a3,[a1],#1
	TEQ	a3,#0
	BNE	stpcpy
	SUB	a1,a1,#1
	FNRET

	END
