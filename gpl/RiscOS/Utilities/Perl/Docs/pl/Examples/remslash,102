
if ($#ARGV < 0) {die "Need an argument !\n";}
$dirname = $ARGV[0];
opendir(MYDIR,$dirname) || die "Couldn't open directory!!\n";
@flob = readdir(MYDIR);
#closedir(MYDIR);
foreach $file (@flob)
{
	if ($file =~ m#.*\/[cC]#)
	{
		($leader = $file) =~ s#(.*)\/.*#\1#;
		$leader =~ tr/A-Z/a-z/;
		$file = $dirname.".$file";
		$leader = $dirname.".$leader";
#		printf "$file\n";
		rename($file,$leader);
	}
}
