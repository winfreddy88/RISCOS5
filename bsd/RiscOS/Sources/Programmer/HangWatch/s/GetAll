        GET     Hdr:ListOpts
        GET     Hdr:Macros
        GET     Hdr:System
        GET     Hdr:Machine.<Machine>
        $GetIO
        $GetMEMM
        GET     Hdr:CPU.Arch
        GET     Hdr:ModHand
        GET     Hdr:Services
        GET     Hdr:Tokens
        GET     Hdr:Proc
        GET     Hdr:FSNumbers
        GET     Hdr:NewErrors
        GET     Hdr:HangWatch
        GET     Hdr:OSRSI6
        GET     Hdr:PublicWS
        GET     Hdr:HALEntries
        GET     Hdr:OSMisc

        GET     VersionASM

  [ :LNOT::DEF:standalone
        GBLL    standalone
  ]

        GBLL    ConfirmDump ; Use HAL_DebugRX/TX to wait for confirmation before producing a dump 
ConfirmDump SETL {FALSE}

        GBLL    SeriousDump ; Trigger a dump on serious errors (SeriousErrorV)
SeriousDump SETL {FALSE}

; DADebug SWIs
XDADebug_Print  * DADebugSWI_Base + 1 + &20000
XDADebug_Reset  * DADebugSWI_Base + 2 + &20000   

        GET     Module.s

        END
