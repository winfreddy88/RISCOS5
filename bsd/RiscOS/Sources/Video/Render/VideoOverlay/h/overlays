#ifndef OVERLAYS_H
#define OVERLAYS_H

#include "globals.h"

#define OVERLAY_MAX 32 /* Must be power of 2 */

extern overlay_t *overlay_new(const modeselector_t *desc,int flags,int32_t task);
extern void overlay_free(overlay_t *overlay);
extern overlay_t *overlay_get(uint32_t id);
extern void overlay_iterate(void (*cb)(overlay_t *,void *),void *param);

