#ifndef DEVCAPS_H
#define DEVCAPS_H

#include <stdint.h>
#include <stdbool.h>

/* DisplayLink device capabilities */

typedef enum
{
	DL115,
	DL120,
	DL125,
	DL160,
	DL165,
	DL190,
	DL195,
	DLUNK,
	DLUNSUPPORTED
} dlchip;

typedef struct
{
	dlchip chip;
	bool fussy_huffman;
	uint8_t diff_mode;
	uint32_t max_total_pixels;
	uint32_t max_width;
	uint32_t mem_start;
	uint32_t mem_end;
	uint32_t chip_id;
} devcaps_t;

extern devcaps_t devcaps_get(const uint8_t *ddesc,uint16_t desclen,uint32_t status,uint32_t version, uint8_t dl120_160);

#endif
