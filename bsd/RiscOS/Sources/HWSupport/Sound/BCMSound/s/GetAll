        GET     Hdr:ListOpts
        GET     Hdr:Macros
        GET     Hdr:System
        GET     Hdr:Machine.<Machine>
        $GetIO
        $GetMEMM
        GET     Hdr:CPU.Arch
        GET     Hdr:ModHand
        GET     Hdr:Debug
        GET     Hdr:Services
        GET     Hdr:Tokens
        GET     Hdr:Proc
        GET     Hdr:Symbols
        GET     Hdr:ResourceFS
        GET     Hdr:MsgTrans
        GET     Hdr:FSNumbers
        GET     Hdr:HighFSI
        GET     Hdr:NewErrors
        GET     Hdr:NdrDebug
        GET     Hdr:AudioDevice
        GET     Hdr:MixerDevice
        GET     Hdr:VCHIQ
        GET     Hdr:RTSupport

        GET     VersionASM

        GBLL    debug
debug   SETL    {FALSE}

dadebug_module  SETL {TRUE}

debug_irqsafe   SETL {TRUE}

          GBLL  debugmod
debugmod  SETL  debug :LAND: {TRUE}

          GBLL  debugaudc
debugaudc SETL  debug :LAND: {TRUE}

          GBLL  debugmix
debugmix  SETL  debug :LAND: {TRUE}          

          GBLL  debugvc
debugvc   SETL  debug :LAND: {TRUE}          

  [ :LNOT::DEF:standalone
        GBLL    standalone
  ]

                ; Do we allow control over audio destination?
                ; Currently disabled since there's no clean way of doing it
                ; with current API
                ; (and not fully implemented anyway)
                GBLL OutputControl
OutputControl   SETL {FALSE}

        GET     Module.s

        END
