#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "kernel.h"
#include "swis.h"
#include "module.h"
#include "protocol.h"


/*************************************************************/
/* _kernel_oserror ftp_stop(_kernel_swi_regs *r)	     */
/*************************************************************/
/* The call to stop getting data from a site. The values in  */
/* the registers are:					     */
/*		       r0 = Flags word			     */
/*		       r1 = pollword of client		     */
/* On exit, R0 is the protocol status word (we use 0)	     */
/*************************************************************/
_kernel_oserror *ftp_stop(_kernel_swi_regs *r)
{
	Session *ses;

	r->r[0] = 0;
	ses = find_session(r->r[1]);

	#ifdef TRACE
	protocol_debug("ftp_stop for session %p\n", ses);
	#endif

	if (ses != NULL) {
		if (ses->data_sd != -1) {
		        _kernel_swi_regs r2 = *r;
			ftp_abort(ses, &r2);
		}
		new_connection(ses);
		kill_session(ses);
	}

	return NULL;
}
