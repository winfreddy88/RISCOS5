/* Gopher (h.processdir)
 *
 */

extern int process_dir_line(char *line, char *output);
extern void gopherdir_init(void);
extern char *gopher_get_type(unsigned int c);

/*
 * Standard Internet protocol response major codes
 * ie. this is the three digit number divided by
 * 100.  256 is a special value.
 */
 
#define resultclass_ZERO	0
#define resultclass_INFO	1
#define resultclass_OK		2
#define resultclass_PENDING	3
#define resultclass_CLIENT_ERR	4
#define resultclass_SERVER_ERR	5
#define resultclass_DEBUG	9

#define resultclass_MISC_INFO	256
