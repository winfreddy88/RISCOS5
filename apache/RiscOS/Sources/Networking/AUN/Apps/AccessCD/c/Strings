#include "Includes.h"

int caseless_strcmp(char *a, char *b)
{
    int d;

    while ( *a || *b ) {
        d = toupper( *(a++) ) - toupper( *(b++) );
        if ( d )
            return d;
    }
    return 0;
}

int strlen_ctrl(char *s)
{
    char *t;

    t = s;
    while (*t >= ' ') t++;
    return t - s;
}

void zero_terminate(char *s)
{
    *(s + strlen_ctrl(s)) = 0;
}

char *strcpy_ctrl(char *s, char *t)
{
    int l;

    l = strlen_ctrl(t);
    memmove(s, t, l);
    s[l] = 0;
    return s;
}

char *strcat_ctrl(char *s, char *t)
{
    strcpy_ctrl(s + strlen_ctrl(s), t);
    return s;
}
