/*
 * AccessCD is a peer to peer CD share program with some
 * basic memory cacheing. This is the setup program
 * !RunImage.
 *
 * This file was generated as part of the modularisation of AccessCD
 * and AccessCDS.
 *
 * Version 1.02 - PWAIN - 950518
 * Comments: <none>
 *
 */

#include "Includes.h"

int openpins(void)
{
    if (pinfd == NULL)
        pinfd  = fopen(PINFILE, "r");
    return (pinfd ? 1 : 0);
}

void closepins(void)
{
    if (pinfd != NULL) {
        fclose(pinfd);
        pinfd = NULL;
    }
}

void read_shares(void)
{
    char line[132];
    int prim;

    if (!openpins())
        return;
    if (fgets(line, sizeof(line), pinfd) != NULL && sscanf(line,"%d",&prim) == 1)
        sprintf(w_cache->icons[0].buffer,"%s",line);
    closepins();
}

void new_config(void)
{
    pinfd  = fopen(PINFILE, "w");
    fprintf(pinfd,"%s\n",w_cache->icons[0].buffer);
    closepins();
}
