/* -*-C-*-
 *
 * freeway.h
 */

#ifndef included_freeway_h
#define included_freeway_h

#include "swipad.h"

typedef unsigned int FreewayType;
typedef unsigned int FreewayAuthent;
typedef unsigned int IPaddress;

#define FREEOBJ_DISCS               1
#define FREEOBJ_PRINTERS            2
#define FREEOBJ_SHAREFS_CLIENTS     5


/*****************************************************************************/

typedef struct
{
    unsigned int    flags;
    FreewayType     type;
    FreewayAuthent  authent;
    args_PAD3;
} args_FreewayRegister;

/*****************************************************************************/

typedef struct
{
    unsigned int    flags;
    FreewayType     type;
    char *          name;
    int             length;
    char *          descriptor;
    FreewayAuthent  authent;
    args_PAD6;
} args_FreewayWrite;

/*****************************************************************************/

typedef struct
{
    unsigned int    flags;
    FreewayType     type;
    char *          name;
    int             length;
    void *          buffer;
union
{
    FreewayAuthent  authent;
    IPaddress       address;
} u;
    args_PAD7;
} args_FreewayRead;

/*****************************************************************************/

typedef struct
{
    unsigned int    flags;
    FreewayType     type;
    int             name_length;
    char *          name_buffer;
    int             descriptor_length;
    char *          descriptor_buffer;
    IPaddress       address;
    int             context;
    FreewayAuthent  authent;
    args_PAD9;
} args_FreewayEnumerate;

/*****************************************************************************/

typedef struct
{
    int             _pad;
    int             scall;
    unsigned int    flags;
    args_PAD3;
} args_FreewayStarting;

/*****************************************************************************/

typedef struct
{
    int             _pad;
    int             scall;
    unsigned int    flags;
    args_PAD3;
} args_FreewayTerminating;

/*****************************************************************************/

typedef struct
{
    int             upcall_reason;
    int             freeway_reason;
    FreewayType     type;
    char *          name;
    int             length;
    char *          descriptor;
    IPaddress       address;
    args_PAD7;
} args_FreewayUpcall;

/*****************************************************************************
 *
 * A disc descriptor is one byte in size, with the following flags defined:
 */

#define OBJDESC_PROTECTED       0x01u       /* Not used */
#define OBJDESC_READONLY        0x02u       /* Not used */
#define OBJDESC_HIDDEN          0x04u       /* Dont include in enumerate */
#define OBJDESC_SUBDIR          0x08u       /* Not used */
#define OBJDESC_CDROM           0x10u       /* Not used */

/*****************************************************************************/

#define ShareFS_CreateShare         0x47ac0

typedef struct
{
    unsigned int    flags;
    char *          name;
    char *          pathname;
    FreewayAuthent  authent;
    args_PAD4;
} args_ShareFSCreateShare;

/*****************************************************************************/

#define ShareFS_StopShare           0x47ac1

typedef struct
{
    unsigned int    flags;
    char *          name;
    args_PAD2;
} args_ShareFSStopShare;

/*****************************************************************************/

#define ShareFS_EnumerateShares     0x47ac2

typedef struct
{
    unsigned int    flags;
    char *          pseudo_name;
    char *          pathname;
    unsigned int    attributes;
    int             context;
    args_PAD5;
} args_ShareFSEnumerateShares;

/*****************************************************************************/

typedef struct
{
    int             _pad;
    int             scall;
    unsigned int    flags;
    args_PAD3;
} args_ShareFSStarting;

/*****************************************************************************/

typedef struct
{
    int             _pad;
    int             scall;
    unsigned int    flags;
    args_PAD3;
} args_ShareFSTerminating;

/*****************************************************************************/


#endif /* included_freeway_h */

/* eof freeway.h */
