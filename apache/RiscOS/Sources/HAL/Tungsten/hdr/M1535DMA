        GET     hdr:DMADevice

; Static workspace for s.M1535DMA
; -------------------------------

M1535DMADevices         *       7

; DMA controller
                        ^       0, a1
; Public bits
M1535DMACDevice         #       HALDevice_DMAC_Size
; Private bits
M1535DMACPhysList       #       4 * M1535DMADevices
M1535DMACSlaveOverrun   #       1       ; bits 0-3 = mask of slave channels in overrun state
M1535DMACMasterOverrun  #       1       ; bits 0-3 = mask of master channels in overrun state
                        #       (((:INDEX:@)+3):AND::NOT:3)-(:INDEX:@)
M1535DMAC_DeviceSize    *       :INDEX: @

; DMA channel
                        ^       0, a1
; Public bits
M1535DMADevice          #       HALDevice_DMA_Size
; Private bits
M1535DMAIOBase          #       4       ; base of I/O space
M1535DMABaseAddr        #       4       ; soft copy of channel base address
M1535DMABaseCount       #       4       ; soft copy of channel base length
M1535DMAPageReg         #       4       ; address of our page register
M1535DMAHighPageReg     #       4       ; address of our high page register
M1535DMAChannel         #       1       ; channel number within this controller
M1535DMAMaster          #       1       ; 1 when on master controller, 0 when on slave
                        #       (((:INDEX:@)+3):AND::NOT:3)-(:INDEX:@)
M1535DMA_DeviceSize     *       :INDEX: @

M1535DMA_WorkspaceSize  *       (M1535DMAC_DeviceSize + M1535DMA_DeviceSize * M1535DMADevices)


        END
