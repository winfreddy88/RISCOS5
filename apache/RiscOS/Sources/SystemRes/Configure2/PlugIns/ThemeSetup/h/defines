/* Toolbox gadgets */
#define ButtonDefault             0x8D
#define ButtonCancel              0x8E
#define ButtonSet                 0x8F
#define ButtonInstall             0x86
#define PopUpTheme                0x85
#define PopUpFont                 0x82
#define DisplayFont               0x81
#define DisplayTheme              0x84
#define CheckUseOutlineFont       0x80
#define CheckLoadTheme            0x83
#define CheckProtectIcons         0x87
#define CheckTexturedWindows      0x88
#define CheckTexturedMenus        0x89
#define CheckDifferentMenuTexture 0x8A
#define Check3DWindows            0x8B
#define CheckFully3DIconbar       0x8C
#define ButtonUnavailable         0x100 /* Preview window */
#define SpriteRendering           0x101 /* Preview window */
#define ThemeNameLen              16
#define FontNameLen               128
#define WimpVisFlagsLen           256

/* New WIMP messages */
#define Wimp_MOpenConfigWindow  0x50d83

/* Useful macros */
#define UNUSED(k)     (k)=(k)
#define MAX(a,b)      (((a)>(b))?(a):(b))
#define MIN(a,b)      (((a)>(b))?(b):(a))

/* Strings in the config file */
#define ThemesDir       "<ThemeDefs$Dir>.Themes"
#define ChoicesDir      "<Choices$Write>.Boot.PreDesk"
#define ConfigFile      ChoicesDir ".ThemeSetup"
#define ConfigFontFile  ChoicesDir ".FontSetup"
#define ConfigFileRO    "Choices:Boot.PreDesk.ThemeSetup"
#define ThemeDisabled   "Set ThemeDefs$Disabled"
#define ThemeSet        "Set Wimp$IconTheme"
#define WimpVisFlagsTag "WimpVisualFlags"
#define FontTag         "Set Wimp$Font"
#define HeaderTag       "| This file was automatically generated by !ThmeSetup"
#define VersionTag      "| Format"
#define NewLine         10
