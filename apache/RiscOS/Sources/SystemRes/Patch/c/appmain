#include <stdio.h>
#include <stdlib.h>
#include "sigfind.h"

int main(int argc, char **argv)
{
  FILE *f;
  int size;
  int *image;

  sigfind_init();

  f = fopen(argv[1],"rb");
  if (!f) return 1;
  fseek(f,0,SEEK_END);
  size = (int) ftell(f);
  fseek(f,0,SEEK_SET);

  printf("File: %s, size = %d bytes\n",argv[1], size);
  image = (int *) malloc(size);
  if (!image) {
    fclose(f);
    return 2;
  }
  fread(image,1,size,f);
  sigfind_find(argv[1],image,size);
  sigfind_stats();
  fclose(f);
}
