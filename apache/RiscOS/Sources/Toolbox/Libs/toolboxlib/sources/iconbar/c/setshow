/*
 * Name        : setshow.c
 * Purpose     : Veneer for method Iconbar_SetShow
 * Description : Sets objects to be shown which SELECT/ADJUST are clicked on iconbar
 */


#include "kernel.h"
#include "toolbox.h"
#include "iconbar.h"




/*
 * Name        : iconbar_set_show
 * Description : Sets objects to be shown which SELECT/ADJUST are clicked on iconbar 
 * In          : unsigned int flags
 *               ObjectId iconbar
 *               ObjectId select
 *               ObjectId adjust
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *iconbar_set_show ( unsigned int flags,
                                           ObjectId iconbar,
                                           ObjectId select,
                                           ObjectId adjust
                                         )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) iconbar;
  r.r[2] = Iconbar_SetShow;
  r.r[3] = (int) select;
  r.r[4] = (int) adjust;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

