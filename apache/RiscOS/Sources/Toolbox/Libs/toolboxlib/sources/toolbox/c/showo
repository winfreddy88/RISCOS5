/*-- from CLib --*/

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "kernel.h"


/*-- from ToolBoxLib --*/

#include "toolbox.h"
#include "wimp.h"


/*******************************************************
 * External functions                                  *
 *******************************************************/
 
/*
 * Calls SWI Toolbox_ShowObject
 */

extern _kernel_oserror *toolbox_show_object ( unsigned int flags,
                                              ObjectId id,
                                              int show_type,
                                              void *type,
                                              ObjectId parent,
                                              ComponentId parent_component
                                            )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) id;
  r.r[2] = show_type;
  r.r[3] = (int) type;
  r.r[4] = (int) parent;
  r.r[5] = (int) parent_component;
  
  return _kernel_swi(Toolbox_ShowObject,&r,&r);
}

 
/*******************************************************
 * End                                                 *
 *******************************************************/


