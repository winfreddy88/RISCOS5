#include "swis.h"
#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"

#include "ScrollList.h"

_kernel_oserror *scrolllist_set_colour(unsigned int flags,
			ObjectId object_id, ComponentId component_id,
			unsigned int foreground, unsigned int background)
{
    return _swix(Toolbox_ObjectMiscOp,
    	_IN(0)|_IN(1)|_IN(2)|_IN(3)|_IN(4)|_IN(5),
    	flags, object_id, ScrollList_SetColour, component_id,
    	foreground, background);
}
