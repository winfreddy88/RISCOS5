#ifndef __event_h
#define __event_h

#ifndef __Toolbox_h
#include "objects.toolbox.h"
#endif

#include "kernel.h"


extern _kernel_oserror *event_raise_toolbox_event (_kernel_swi_regs *r);

/*
 *   Entry:
 *         R0  =  flags
 *         R1  =  Object ID
 *         R2  =  Component ID
 *         R3  -> Toolbox Event block (as defined above)
 *   Exit:
 *         R1-R9 preserved
 *
 */


