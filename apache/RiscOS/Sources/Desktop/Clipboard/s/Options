                GBLL    Debug
Debug           SETL    {FALSE}

                GBLL    UseDynamicAreas
UseDynamicAreas SETL    {TRUE}

                GBLL    DragNDrop
DragNDrop       SETL    {FALSE}   ; support not complete

    [ :LNOT: :DEF: standalone
                GBLL    standalone
standalone      SETL {FALSE}      ; Build-in Messages file and i/f to ResourceFS
    ]

                GBLL    debugtmp
debugtmp        SETL    {TRUE}           ; Temporary debug

hostvdu         SETL    {TRUE}

debug           SETL    {FALSE}

                END
