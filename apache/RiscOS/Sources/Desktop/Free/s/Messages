; > s.Messages

; ----------------------------------------------------------------------------------------------------------------------
;       Received a recorded message
message_received_ack
; ----------------------------------------------------------------------------------------------------------------------
;       Received an unrecorded message
message_received   
        Push    "LR"
        LDR     r0, [r1,#ms_action]
        TEQ     r0, #Message_Quit
        BEQ     quit_routine
        Pull    "PC"  

; ----------------------------------------------------------------------------------------------------------------------
;       CLose all icons windows
quit_routine  
        ADR     r2, windows_ptr
        BL      free_list

        LDR     r1, taskidentifier
        LDR     r0, mytaskhandle
        SWI     XWimp_CloseDown

        MOV     r0, #0
        STR     r0, mytaskhandle 
        SWI     OS_Exit

; ----------------------------------------------------------------------------------------------------------------------
        LNK     s.ADFS
