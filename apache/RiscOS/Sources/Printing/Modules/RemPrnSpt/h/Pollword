/*
 * Pollword.h - pollword values & reasons
 */

/*
 * Pollword values - keep in step in !Printers
 */

#define POLLWORD_SOMETHING_HAPPENED          0x01

/*
 * Queue reason codes
 */

#define RPS_PRINTER_CLOSED       0x01
#define RPS_FILE_RENAMED         0x02

#define RPS_PRINTER_ADDED        0x03
#define RPS_PRINTER_DELETED      0x04
#define RPS_PRINTER_CHANGED      0x05
#define RPS_LOCALPRINTER_DELETED 0x06

#define RPS_FREEWAY_STARTING     0x07
#define RPS_FREEWAY_TERMINATING  0x08

#define USB_DEVICE_REMOVED       0x09
#define USB_PRINTER_ADDED        0x0A
