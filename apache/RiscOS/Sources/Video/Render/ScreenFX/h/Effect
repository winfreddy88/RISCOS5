#ifndef SCREENFX_EFFECT_H
  #define SCREENFX_EFFECT_H

  #include "Global.h"

  /* Function prototypes */

  _kernel_oserror * effect_start_fade
                    (
                      uint32_t left,
                      uint32_t right,
                      uint32_t duration
                    );

  void              effect_process_fade
                    (
                      void
                    );

  _kernel_oserror * effect_start_crossfade
                    (
                      bool     to_low,
                      uint32_t duration
                    );

  void              effect_process_crossfade
                    (
                      void
                    );

  _kernel_oserror * effect_cancel
                    (
                      bool escape_event
                    );

  _kernel_oserror * effect_reset
                    (
                      void
                    );

  uint32_t          effect_pack
                    (
                      uint8_t r,
                      uint8_t g,
                      uint8_t b,
                      uint8_t s
                    );

  bool              effect_block
                    (
                      uint32_t fade_duration,
                      bool     no_callbacks,
                      bool     allow_escape
                    );

#endif /* SCREENFX_EFFECT_H */

/* End of file */
