        [       :LNOT: :DEF: _iMx6Debug_HDR__
        GBLL    __iMx6Debug_HDR__

        MACRO
$label  DebugTX $str
    [ Debug
$label
        DebugTXS "$str"
        DebugCR
    ]
        MEND

        MACRO
$label  DebugTXS $str
    [ Debug
$label  BL      DebugTXStrInline
        =       "$str ", 0
        ALIGN
    ]
        MEND

	MACRO
$label	DebugCR
    [ Debug
$label  BL      DebugTXStrInline
        =       13,10, 0
        ALIGN
    ]
        MEND

        MACRO
$label   DebugReg $reg, $str
    [ Debug
$label   Push   "$reg"
     [ "$str" <> ""
       DebugTXS $str
     ]
        BL     DebugHexTX4
        Pull   "$reg"
        DebugCR
    ]
        MEND

        MACRO
$label   DebugRegNCR $reg, $str
    [ Debug
$label   Push   "$reg"
     [ "$str" <> ""
       DebugTXS $str
     ]
        BL     DebugHexTX4
        Pull   "$reg"
    ]
        MEND

        MACRO
$label  DebugRegByte $reg, $str
    [ Debug
$label  Push   "$reg"
     [ "$str" <> ""
        DebugTXS "$str"
     ]
        BL     DebugHexTX2
        Pull   "$reg"
    ]
        MEND

        ] ; __iMx6Debug_HDR__

        END
