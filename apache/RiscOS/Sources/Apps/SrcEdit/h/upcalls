/* Title:   upcalls.c
 * Purpose: to handle any up-calls from txtedit
 * Author:  IDJ
 * History: 29-Feb-90: IDJ: created
 *
 */

#ifndef __upcalls_h
#define __upcalls_h

#ifndef __txtedit_h
#include "txtedit.h"
#endif

extern void upcalls_open_handler(char *filename, txtedit_state *s, void *handle);
   /* upcall handler called when a new txtedit_state is created */

extern void upcalls_close_handler(char *filename, txtedit_state *s, void *handle);
   /* upcall handler called when a window is closed */

#endif

