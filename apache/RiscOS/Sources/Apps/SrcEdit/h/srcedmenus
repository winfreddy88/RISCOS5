/* File:   srcedmenus.h
 * Purpose: customise the edit menu tree for our own ends
 * Author: IDJ  (yes I'm afraid I'm responsible for this hackery)
 * History:   28-Feb-90: IDJ: split off from multiedit
 *
 */

#ifndef __srcedmenus_h
#define __srcedmenus_h

extern menu srcedmenus_menumaker(void *handle);
   /* overrides risc_oslib menumaker. We must ensure that any entries greyed
      out by the read_only menumaker are re-enabled, since the menu is ONE
      shared static
    */

extern menu srcedmenus_readonly_menumaker(void *handle);
   /* read-only menumaker ensures that potentially nasty things are
      greyed out
    */

extern void srcedmenus_menuproc(void *handle, char *hit);
   /* process a hit on a srcedit menu - mainly just pass it on, apart
      from Help, Load which are our additions
    */

#endif

