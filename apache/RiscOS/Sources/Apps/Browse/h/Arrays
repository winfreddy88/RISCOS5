/* File:    Arrays.h                                          */
/*          (C) 2006 Tematic Ltd.                             */
/*          All rights reserved                               */
/*                                                            */
/* Purpose: Array management, originally from ARLib routines  */
/*          by S.J.Middleton.                                 */
/*                                                            */
/*          Simple, non-reentrant routines.                   */
/*                                                            */
/*          DO NOT USE FOR STORING FLEX ANCHORS (use of       */
/*          'restrict' internally prohibits this).            */
/*                                                            */
/* Author:  S.J.Middleton (1992), A.D.Hodgkinson.             */
/*                                                            */
/* History: 09-Feb-2006 (ADH): Imported from PRISMLib - it    */
/*                             used its own Messages lookups  */
/*                             which wouldn't work in Browse. */
/**************************************************************/

#ifndef PRISMLIB_NRARRAYS_H
  #define PRISMLIB_NRARRAYS_H

  /* External inclusions */

  #include <kernel.h>

  /* Data types */

  typedef struct internal_array array_t;

  typedef int (*array_compare_fn_ptr_t)
              (
                const void * /*first*/,
                const void * /*second*/
              );

  /* Function prototypes */

  array_t            * arrays_create
                       (
                         int    initial_n,
                         size_t elem_size
                       );

  _kernel_oserror    * arrays_extend
                       (
                         array_t * restrict v,
                         int                n
                       );

  _kernel_oserror    * arrays_insert
                       (
                         array_t * restrict v,
                         int                n,
                         int                at
                       );

  _kernel_oserror    * arrays_delete
                       (
                         array_t * restrict v,
                         int                n,
                         int                at
                       );

  void                 arrays_destroy
                       (
                         array_t ** restrict pv
                       );

  int                  arrays_size
                       (
                         array_t * restrict v
                       );

  void               * arrays_read
                       (
                         array_t * restrict v,
                         int                entry
                       );

  void                 arrays_sort
                       (
                         array_t                * restrict v,
                         array_compare_fn_ptr_t            comp_fn
                       );

  int                  arrays_search
                       (
                         array_t                * restrict v,
                         const void             *          key,
                         array_compare_fn_ptr_t            comp_fn
                       );

#endif /* PRISMLIB_NRARRAYS_H */

/* End of file */
