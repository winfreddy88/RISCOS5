#ifndef ROMPRESS_H
#define ROMPRESS_H

#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
#include <stdbool.h>
#include <string.h>
#include "kernel.h"
#include "swis.h"

#include "Global/OSEntries.h"

#define OSHdr_MinEntries (OS_IICOpV+1) /* Minimum number of entries the OS entry table must contain */
#define OSHdr_MaxEntries (HighestOSEntry+1) /* Maximum number of entries the OS entry table must contain */

typedef void (*DecompFunc)(OSHdr *hdr,void (*imb)(uint32_t,uint32_t,uint32_t),void *ws);
typedef void (*CompressFunc)(OSHdr *hdr,char *data,uint32_t len);

typedef struct {
  const char *name;
  char letter;
  CompressFunc func;
} Compressor;

extern Compressor compressors[];

extern void *safemalloc(size_t size);

#endif
