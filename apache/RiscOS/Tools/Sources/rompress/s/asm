        GET     ListOpts
        GET     Macros
        GET     System
        GET     OSEntries

        AREA    |asm$$Code|, CODE, READONLY

        EXPORT  IMBFunc
        EXPORT  asm_decompress

IMBFunc Push    "lr"
        SWI     XOS_SynchroniseCodeAreas
        Pull    "pc"

asm_decompress
        ; R0 = OS hdr
        ; R1 = IMBFunc
        ; R2 = workspace ptr
        ; Switch to SVC mode to stop clib throwing a hissy fit if an event
        ; occurs and it tries to unwind the stack
        SWI     OS_EnterOS
        ; Call the decompression code
        LDR     R3,[R0,#OSHdr_DecompressHdr]
        ADD     R3,R3,R0
        LDR     R12,[R3,#OSDecompHdr_Code]
        MOV     LR,PC
        ADD     PC,R12,R3
        ; Switch back to user mode
        MRS     R0,CPSR
        BIC     R0,R0,#&F
        MSR     CPSR_c,R0
        MOV     pc,lr

        END
