#include <stdio.h>

#include "unixlib.h"

char *getpass(const char *prompt)
{
    static char pbuf[9];
    char *p;
    int c;

    fprintf(stdout, "%s", prompt);
    fflush(stdout);

    for( p = pbuf; (c = osreadc()) != '\r' && c != EOF; )
    {
	if( p < &pbuf[8] )
	    *p++ = c;
    }

    fprintf(stdout, "\n");
    *p = 0;
    return(pbuf);
}

/* EOF getpass.c */
