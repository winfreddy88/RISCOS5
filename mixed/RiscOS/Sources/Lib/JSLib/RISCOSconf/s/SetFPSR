; File   : SetFPSR.s
; Purpose: Set the floating point status register
; Authors: KJB, ADH
; History: 20-Apr-98: Created

	AREA	FPCODE,CODE,PIC,READONLY

	EXPORT	set_fpsr

set_fpsr ; unsigned int set_fpsr(unsigned int eor, unsigned int mask);

	RFS	a3
	BIC	a4, a3, a2
	EOR	a4, a4, a1
	WFS	a4

	MOV	a1,a3
        [ {CONFIG}=26
	MOVS    pc,lr
        |
	MOV     pc,lr
        ]

	END
