        [       :LNOT: :DEF: __HAL_GPIO_HDR__
        GBLL    __HAL_GPIO_HDR__

        GET     hdr.iMx6qIRQs
; GPIO registers
                ^ 0
GPIO_Base       #       0
GPIO_DR         #       4
GPIO_GDIR       #       4
GPIO_PSR        #       4
GPIO_ICR1       #       4
GPIO_ICR2       #       4
GPIO_IMR        #       4
GPIO_ISR        #       4
GPIO_EDGE_SEL   #       4


; GPIO memory usage
; the device as we use it
                ^       0, a1
; public bit
GPIODevice      #       HALDevice_GPIO_Size
; our private bits
GPIO_sb         #       4

GPIODeviceEnd   #       0

GPIODeviceSize  *       (GPIODeviceEnd-GPIODevice)



        ] ; __HAL_GPIO_HDR__

        END
