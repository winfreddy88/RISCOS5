        EXPORT  memcpy
        
        AREA    |Asm$$Code|, CODE, READONLY, PIC
        
        ; A really simple implementation, just so it has a consistent licence
        ; In:
        ;   a1 = dest
        ;   a2 = source
        ;   a3 = size in bytes (assumed a multiple of 4)
        ; Out:
        ;   a1 preserved
memcpy  ROUT
        MOV     a4, a1
        B       %F10
01      LDR     ip, [a2], #4
        STR     ip, [a4], #4
10      SUBS    a3, a3, #4
        BCS     %B01
        MOV     pc, lr
        
        END
