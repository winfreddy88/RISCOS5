#include "Global/Services.h"
#include "Global/RISCOS.h"
#include "VersionNum"

title-string:           Module_ComponentName

help-string:            Module_ComponentName Module_MajorVersion_CMHG Module_MinorVersion_CMHG

date-string:            Module_Date_CMHG

international-help-file:"Resources:$.Resources."Module_ComponentName".Messages"

initialisation-code:    rdaemon_init

finalisation-code:      rdaemon_final

service-call-handler:   rdaemon_services Service_ResourceFSStarting,
                                         Service_DCIProtocolStatus

event-handler:          rdaemon_events Event_Internet

generic-veneers:        rdaemon_ticks,
                        rdaemon_fgticks

#ifdef NO_INTERNATIONAL_HELP

command-keyword-table:  rdaemon_commands
        RouteDTraceOff(min-args:0, max-args:0,
               add-syntax:,
               help-text:      "Turn off tracing by the RouteD module.\n",
               invalid-syntax: "Syntax: *RouteDTraceOff"),

        RouteDTraceOn(min-args:1, max-args:255,
               add-syntax:,
               help-text:      "Turn on tracing by the RouteD module, at a given detail level, optionally to a file. If the filename is omitted then trace messages will be shown on screen.\n",
               invalid-syntax: "Syntax: *RouteDTraceOn <level> [filename]")

#else

command-keyword-table:  rdaemon_commands
        RouteDTraceOff(min-args:0, max-args:0,
               international:,
               help-text:      "HTOFF",
               invalid-syntax: "STOFF"),

        RouteDTraceOn(min-args:1, max-args:255,
               international:,
               help-text:      "HTON",
               invalid-syntax: "STON")
#endif
