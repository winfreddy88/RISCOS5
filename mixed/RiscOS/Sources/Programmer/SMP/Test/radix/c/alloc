#include "kernel.h"
#include "swis.h"

#include "Global/ModHand.h"

#include "alloc.h"

void *rma_alloc(size_t s)
{
  void *mem;
  if (_swix(OS_Module, _IN(0)|_IN(3)|_OUT(2), ModHandReason_Claim, s, &mem))
  {
    return NULL;
  }
  return mem;
}

void rma_free(void *ptr)
{
  if (ptr)
  {
    _swix(OS_Module, _IN(0)|_IN(2), ModHandReason_Free, ptr);
  }
}
