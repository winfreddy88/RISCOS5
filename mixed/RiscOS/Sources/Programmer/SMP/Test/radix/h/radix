#ifndef RADIX_H
#define RADIX_H

#include <stdint.h>
#include <stdbool.h>

#define HIST_SIZE 2048

typedef struct {
  int b0[HIST_SIZE];
  int b1[HIST_SIZE];
  int b2[HIST_SIZE];
} radix_hist;

typedef struct {
  uint32_t *in;
  uint32_t *out;
  uint32_t *temp;
  radix_hist *hist;
  int sz;
} radix_args;

extern void radix(const radix_args a);

extern radix_args radix_gen(void);

extern void radix_free(radix_args a);

extern bool radix_check(const radix_args a);

#endif
