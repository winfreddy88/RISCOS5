#ifndef XHCIDRIVER_H
#define XHCIDRIVER_H

#define Module_MessagesFile  "Resources:$.Resources.XHCIDriver.Messages"
#define ErrorBase_XHCIDriver 0x820200
enum
{
	ERR00_SINGLE_INSTANCE = 0,
	ERR01_NO_MORE_XHCI,
	ERR02_VENEER_CONSTRUCTION,
	ERR03_OLD_USBD
};
typedef struct
{
	uint32_t errnum;
	char     errmess[8];
} internaterr_t;

typedef uint8_t bool_t;
#define FALSE   0
#define TRUE    (!FALSE)

typedef struct
{
	uint32_t type;
	int32_t  flags;
	void    *hw;
	int32_t  devno;
} usbinfo_t;

#define MIN_USBDRIVER_API_VERSION 80

/* Exported function prototypes */
extern void *Resources(void); /* Generated by 'resgen' */
void veneer_install(int *, int *, size_t); /* In 'veneer' */
int *veneer_init(void); /* In 'veneer' */
const char *intl_lookup(const char *);

/* Exported variables */
extern void     *g_pw;
extern uint32_t  g_msgblock[4];
extern uint32_t  g_instance;
extern uint32_t  g_controller;
extern usbinfo_t g_device;

#endif
