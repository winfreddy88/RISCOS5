; trigger callbacks by calling OS_LeaveOS and OS_EnterOS

        GET     Hdr:ListOpts
        OPT     OptNoList
        GET     Hdr:PublicWS
        GET     Hdr:Macros
        GET     Hdr:System
        GET     Hdr:OSRSI6
        GET     Hdr:Proc

        AREA    |C$$data|, DATA
ptr_IRQsema
        DCD     0   ; Cached IRQsema ptr

        AREA    |C$$code|, CODE, READONLY

        EXPORT  triggercbs
triggercbs
        Entry
        LDR     r3, =ptr_IRQsema
        LDR     r1, [sl,#-536]       ; Get relocation
        ADD     r3, r3, r1
        LDR     r2, [r3]
        CMP     r2, #0
        BNE     %FT10
        MOV     r0, #6
        MOV     r1, #0
        MOV     r2, #OSRSI6_IRQsema
        SWI     XOS_ReadSysInfo
        MOVVS   r2, #0
        CMP     r2, #0
        MOVEQ   r2, #Legacy_IRQsema
        STR     r2, [r3]
10
        LDR     lr, [r2]
        MOVS    lr, lr
        EXIT    NE                   ; NZ is within IRQ.. so no CB allowed
        SWI     OS_LeaveOS
        SWI     OS_EnterOS
        EXIT

        LTORG

        END
