; little assembler stub to buffer service routine

	AREA	|C$$data|, DATA

        EXPORT  BuffManService
BuffManService
        DCD     0

        EXPORT  BuffManWS
BuffManWS
        DCD     0

	AREA	|C$$code|, CODE, READONLY

	EXPORT	call_buffermanager
call_buffermanager
	STMFD	R13!,{R4,R5,r12,LR}
	MOV	R4,R0
	MOV	R5,R1
	MOV	R12,R2
	LDMIA	R4!,{R0-R3}
	MOV	LR,PC
	MOV	PC,R5
	STMDB	R4,{R2-R3}
	MRS	R0,CPSR
	LDMFD	R13!,{R4,R5,r12,PC}

        END
