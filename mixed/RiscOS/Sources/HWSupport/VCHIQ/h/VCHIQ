#ifndef INTERFACE_VCHIQ_H

#include <stdint.h>

/* Service creation struct for ServiceOpen, ServiceCreate */
typedef struct
{
  struct {
    uint32_t version;
    uint32_t version_min;
  } version;
  uint32_t service_id; /* fourcc, big endian */
  uint32_t reserved_0; /* Reserved, must be 0 */
  uint32_t rx_fifo_size;
  uint32_t tx_fifo_size;
  void (*callback)(void *callback_param,uint32_t reason,void *handle);
  void *callback_param;
  uint32_t want_unaligned_bulk_rx; /* 0/1 */
  uint32_t want_unaligned_bulk_tx; /* 0/1 */
  uint32_t want_crc; /* 0/1 */
} vchiq_service_t;

#endif
/* In the exported copy of this file, the Hdr2H translation of hdr.VCHIQ will follow. */
